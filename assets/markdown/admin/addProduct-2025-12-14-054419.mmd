flowchart TD
    classDef startend fill:#fff,stroke:#000,stroke-width:2px,rx:10,ry:10;
    classDef io fill:#fff,stroke:#000,stroke-width:1px,slant:45;
    classDef decision fill:#fff,stroke:#000,stroke-width:1px,shape:diamond;
    classDef process fill:#fff,stroke:#000,stroke-width:1px;

    Start([Start]) --> CheckFull{"productCount >= maxProducts?"}
    
    CheckFull -- Yes --> MsgFull[/"Display 'Limit Reached'"/]
    MsgFull --> Return([Return])
    
    CheckFull -- No --> CreateP["Create local Product p"]
    CreateP --> SetID["p.id = productCount + 1"]
    SetID --> InputName[/"Input Name"/]
    InputName --> InputPrice[/"Input Price"/]
    InputPrice --> InputStock[/"Input Stock"/]
    
    InputStock --> SetActive["p.active = true"]
    SetActive --> AddToArray["products[productCount] = p"]
    AddToArray --> IncCount["productCount++"]
    IncCount --> MsgSuccess[/"Display 'Added Successfully'"/]
    MsgSuccess --> Return

    class Start,Return startend;
    class MsgFull,InputName,InputPrice,InputStock,MsgSuccess io;
    class CheckFull decision;
    class CreateP,SetID,SetActive,AddToArray,IncCount process;