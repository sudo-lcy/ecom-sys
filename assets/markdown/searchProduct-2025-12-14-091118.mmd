flowchart TD
    classDef startend fill:#fff,stroke:#000,stroke-width:2px,rx:10,ry:10;
    classDef io fill:#fff,stroke:#000,stroke-width:1px,slant:45;
    classDef decision fill:#fff,stroke:#000,stroke-width:1px,shape:diamond;
    classDef process fill:#fff,stroke:#000,stroke-width:1px;

    Start([Start]) --> InputKey[/"Input Search Keyword"/]
    InputKey --> InitLoop["Set i = 0, found = false"]
    
    InitLoop --> LoopCond{"i < productCount?"}
    
    %% Loop Body
    LoopCond -- True --> CheckActive{"products[i].active?"}
    
    CheckActive -- Yes --> Convert["Convert Name & Key to Lowercase"]
    Convert --> Match{"Key found in Name?"}
    
    Match -- Yes --> PrintRes[/"Print Product Details"/]
    PrintRes --> SetFound["found = true"]
    SetFound --> Inc["i++"]
    
    Match -- No --> Inc
    CheckActive -- No --> Inc
    Inc --> LoopCond
    
    %% End Loop
    LoopCond -- False --> CheckFound{"found == false?"}
    CheckFound -- Yes --> MsgNone[/"Display 'No matches'"/]
    MsgNone --> Return([Return])
    CheckFound -- No --> Return

    class Start,Return startend;
    class InputKey,PrintRes,MsgNone io;
    class LoopCond,CheckActive,Match,CheckFound decision;
    class InitLoop,Convert,SetFound,Inc process;