flowchart TD
    classDef startend fill:#fff,stroke:#000,stroke-width:2px,rx:10,ry:10;
    classDef io fill:#fff,stroke:#000,stroke-width:1px,slant:45;
    classDef decision fill:#fff,stroke:#000,stroke-width:1px,shape:diamond;
    classDef process fill:#fff,stroke:#000,stroke-width:1px;

    Start([Start]) --> PrintHeader[/"Print Table Header"/]
    PrintHeader --> InitLoop["Set i = 0"]
    
    InitLoop --> LoopCond{"i < productCount?"}
    
    %% Loop Body
    LoopCond -- True --> CheckActive{"products[i].active == true?"}
    
    CheckActive -- Yes --> PrintRow[/"Print products[i] details"/]
    PrintRow --> Inc["i++"]
    
    CheckActive -- No --> Inc
    Inc --> LoopCond
    
    %% End Loop
    LoopCond -- False --> Return([Return])

    class Start,Return startend;
    class PrintHeader,PrintRow io;
    class LoopCond,CheckActive decision;
    class InitLoop,Inc process;